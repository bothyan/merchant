.hds{
    width: 100%;
    height: 110rpx;
    background: #e06e27;
}
.header{
    height: 170rpx;
    padding: 0 25rpx;
    display: flex;
    margin-top: -85rpx;
    position: relative;
} 
button.getUserInfo{
    width: 500rpx;
    margin: 20rpx auto 0;
}   
.avtar-hd{
    width: 170rpx;
    height: 170rpx;
    background: #fff;
    border-radius: 100%;
    overflow: hidden;
}
.avtar{
    width: 140rpx;
    height: 140rpx;
    border-radius: 100%;
    margin: 15rpx;
}
.msg-hd{
    flex: 1;
    display: flex;
    margin-left: 15rpx;
    flex-direction: column;
}
.code-hd{
    display: flex;
    margin-top: 20rpx;
    justify-content: space-between;
}
.title{
    color: #fff;
    font-size: 30rpx;
}
.name-hd{
    margin-top: 25rpx;
    display: flex;
    flex-direction: column;
}
.name-level{
    display: flex;
    align-items: center;
}
.name{
    color: #333333;
    font-size: 28rpx;
}
.level{
    font-size: 20rpx;
    background: #e0c481;
    color: #fff;
    padding: 0 10rpx;
    height: 24rpx;
    line-height: 24rpx;
    border-radius: 20rpx;
    font-style: oblique;
    margin-left: 10rpx;
}
.phone{
    color: #999999;
    font-size: 24rpx;
    
}

.datas{
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30rpx 25rpx;
    border-bottom: 30rpx solid #f4f4f4;
}
.datas-hd{
    width: 33%;
}
.datas text{
    text-align: center;
    display: block;
}
.datas .words{
    margin-top: 8rpx;
    font-size: 24rpx;
    color: #999999;
}
.num1{
    font-size: 36rpx;
    color: #ff9b1f;
    font-weight: bold;
}
.num2,.num3{
    font-size: 36rpx;
    color: #333333;
    font-weight: bold;
}
.myhd{
    height: 90rpx;
    border-bottom: 2rpx solid #f4f4f4;
    display: flex;
    align-items: center; 
    font-size: 28rpx;
    color: #333333;
    width: 700rpx;
    margin: 0 auto;
}
.myhd text{
    margin-left: 20rpx;
    flex: 1;
}