.city{
    height: 70rpx;
    background: #f4f4f4;
    color: #999;
    line-height: 70rpx;
    padding: 0 25rpx;
    font-size: 24rpx;
}
.shop-list{
    width: 700rpx;
    margin: 0 auto;
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 130rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
.name-distance{
    width: 700rpx;
    display: flex;
    justify-content:space-between;
}
.name{
    color: #333333;
    font-size: 28rpx;
}
.distance{
    color: #999;
    font-size: 28rpx;
}
.location{
    width: 700rpx;
    display: flex;
    margin-top: 10rpx;
    align-items: center;
}
.word{
    margin-left: 10rpx;
    font-size: 24rpx;
    color: #999;
}