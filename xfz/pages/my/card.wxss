.hds{
    width: 100%;
    height: 250rpx;
    background: #e06e27;
}
.card{
    width: 598rpx;
    height: 346rpx;
    margin: -173rpx auto 0;
    position: relative;
    overflow: hidden;
    box-shadow:0 2px 4px 0 #f8f8f8;
}
.card image{
    position: absolute;
    top:0;
    left: 0;
    width: 598rpx;
    height: 346rpx;
}
.card view{
    text-indent:45rpx;
    position: relative;
    z-index: 10;
}
.title-zh,.title-en{
    font-size:40rpx;
    color: #ffffff;
}
.title-zh{
    margin-top: 50rpx;
    font-weight: bold;
}
.name,.num{
    font-size:24rpx;
    color: #ffffff;
}
.name{
    margin-top: 70rpx;
}
.code{
    border:2rpx solid #000000;
    width: 376rpx;
    height: 376rpx;
    display: block;
    margin: 50rpx auto 0;
}