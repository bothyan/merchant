.header-bg{
    width: 100%;
    height: 294rpx;
}
.header{
    position: relative;
    background: #e06e27;
}
.con{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100%;
    height: 294rpx;
    position: absolute;
    top: 0;
    left: 0;
}
.con .tips{
    font-size: 27rpx;
    color: #fff;
}
.con .num{
    font-size: 75rpx;
    color: #fff;
    font-weight: bold;
}
.instructions{
    position: absolute;
    right: 25rpx;
    bottom: 20rpx;
    color: #fdc19e;
    font-size: 24rpx;
    z-index: 10;
}
.titlebox{
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}
.titlebox text{
    color: #333333;
    font-size: 30rpx;
    margin-left: 14rpx;
    font-weight: bold;
}
.list-hd{
    padding: 10rpx 25rpx 0;
    background: #fff;
}
.list{
    height: 120rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
.list .left{
    float: left;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
}
.list .right{
    float: right;
    display: flex;
    justify-content: center;
    flex-direction: column;
    height: 100%;
}
.place{
    font-size: 28rpx;
    color: #333;
}
.right{
    font-size: 36rpx;
    color: #5dbf82;
    font-weight: bold;
}
.time{
    font-size: 24rpx;
    color: #999;
    margin-top: 5rpx;
}
.poplay{
    width: 100%;
    height: 100%;
    position: fixed;
    background: rgba(0,0,0,0.6);
    z-index: 100;
    top: 0;
    left: 0;
}
.pop-hd{
    position: absolute;
    padding: 20rpx 50rpx 50rpx 50rpx;
    width: 450rpx;
    background: #fff;
    border-radius: 20rpx;
    top: 110rpx;
    left: 100rpx;
}
.titlepop{
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    height: 100rpx;
    margin-bottom: 20rpx;
    line-height: 100rpx;
    border-bottom: 2rpx solid #f4f4f4;
}
.items{
    color: #000;
    font-size: 24rpx;
    line-height: 50rpx;
}