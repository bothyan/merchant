.header{
    height: 50rpx;
    background: #fff;
    padding: 20rpx 25rpx;
}
.search-hd{
    width: 700rpx;
    height: 50rpx;
    line-height: 50rpx;
    background: #ebebeb;
    border-radius: 40rpx;
    display: flex;
    align-items: center; 
    justify-content: center; 
}
.search-hd input{
    color: #333;
    font-size: 24rpx;
    margin-left: 10rpx;
    width: 400rpx;
}
.datas{
    height: 180rpx;
    background: #2c304d;
    display: flex;
    align-items: center; 
    justify-content: center; 
}
.data-hd{
    color: #fff;
    text-align: center;
    margin: 0 90rpx;
}
.data-title{
    font-size: 24rpx;
}
.data-num{
    font-size: 30rpx;
}
.data-num text{
    font-size: 60rpx;
    font-weight: bold;
}
.nav{
    width: 700rpx;
    height: 115rpx;
    margin: 0 auto;
    border-bottom: 2rpx solid #f4f4f4;
}
.nav-hd{
    width: 139rpx;
    margin-right: 48rpx;
    float: left;
    height: 40rpx;
    margin-top: 37rpx;
    line-height: 40rpx;
    position: relative;
}
.nav-hd:last-child{
    margin-right: 0;
}
.nav-hd text{
    color: #333333;
    font-size: 28rpx;
}
.triangle .triangle1{
    border-left: 5px dashed transparent;
    border-right: 5px dashed transparent;
    border-top: 5px solid #ff9b1f;
    border-bottom: 5px dashed transparent;
    height: 0;
    width: 0;
    font-size: 0;
    overflow: hidden;
    position: absolute;
    right: 0;
    bottom: -3rpx;
}
.triangle .triangle2{
    border-left: 5px dashed transparent;
    border-right: 5px dashed transparent;
    border-top: 5px dashed transparent;
    border-bottom: 5px solid #999999;
    height: 0;
    width: 0;
    font-size: 0;
    overflow: hidden;
    position: absolute;
    right: 0;
    top: 0rpx;
}
.trianglehover .triangle1{
    border-left: 5px dashed transparent;
    border-right: 5px dashed transparent;
    border-top: 5px solid #999999;
    border-bottom: 5px dashed transparent;
    height: 0;
    width: 0;
    font-size: 0;
    overflow: hidden;
    position: absolute;
    right: 0;
    bottom: -6rpx;
}
.trianglehover .triangle2{
    border-left: 5px dashed transparent;
    border-right: 5px dashed transparent;
    border-top: 5px dashed transparent;
    border-bottom: 5px solid #ff9b1f;
    height: 0;
    width: 0;
    font-size: 0;
    overflow: hidden;
    position: absolute;
    right: 0;
    top: 3rpx;
}
.member-box{
    width: 700rpx;
    margin: 0 auto 130rpx;
}
.member-list{
    padding: 25rpx 0;
    border-bottom: 2rpx solid #f4f4f4;
    height: 136rpx;
}
.avtar{
    width: 136rpx;
    height: 136rpx;
    border-radius: 20rpx;
    float: left;
}
.msg{
    float: left;
    height: 136rpx;
    margin-left: 24rpx;
    width: 540rpx;
    position: relative;
}
.title{
    display: flex;
    align-items: center; 
}
.title text{
    color: #333333;
    font-size: 30rpx;
}
.gender{
    width: 29rpx;
    height: 31rpx;
    margin-left: 10rpx;
}
.chuzhi{
    font-size: 20rpx;
    color: #fff;
    border-radius: 15rpx;
    background: #2acdac;
    padding:0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-left: 10rpx;
}
.shiming{
    font-size: 20rpx;
    color: #fff;
    border-radius: 15rpx;
    background: #007fcc;
    padding:0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    margin-left: 10rpx;
}
.phone{
    font-size: 24rpx;
    color: #999;
    position: absolute;
    left: 0;
    bottom: 35rpx;
}
.msg-data{
    font-size: 24rpx;
    color: #999;
    position: absolute;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center; 
}
.msg-data text{
    color: #fe9900;
}
.msg-data .sales{
    margin-left: 40rpx;
}
.chuzhi-b{
    position: fixed;
    bottom: 0;
    left: 0;
    display: block;
    width: 750rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background: #fff3e7;
    font-size: 36rpx;
    color: #ff9b1f;
    border: none;
    letter-spacing: 1em;
}