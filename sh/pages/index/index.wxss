.header{
    padding: 0 25rpx;
    height: 200rpx;
    display: flex;
    align-items: center; 
    background: #2c304d;
    color: #fff;
    font-size: 30rpx;
    font-weight: bold;
}
.header-hd{
    display: flex;
    flex-direction: column;
    align-items: center; 
}
.header-hd text{
    margin-top: 25rpx;
}
.header-hd1{
    width: 225rpx;
}
.header-hd2{
    width: 250rpx;
}
.header-hd3{
    width: 225rpx;
}
.nav{
    padding: 15rpx 15rpx;
    flex-wrap: wrap;
    display: flex;
    align-items: center; 
    background: #fff;
    border-bottom: 20rpx solid #f4f4f4;
    color: #333333;
    font-size: 30rpx;
}
.nav-hd{
    height: 150rpx;
    width: 180rpx;
    display: flex;
    flex-direction: column;
    align-items: center; 
    justify-content: center;
}
.nav-hd text{
    margin-top: 20rpx;
}
.model{
    background: #fff;
    border-bottom: 20rpx solid #f4f4f4;
}
.titlebox{
    height: 90rpx;
    line-height: 90rpx;
    display: flex;
    align-items: center;
}
.titlebox text{
    color: #333333;
    font-size: 28rpx;
    margin-left: 14rpx;
}
.datas{
    display: flex;
    align-items: center; 
    border-top: 2rpx solid #ebebeb;
    width: 700rpx;
    margin: 0 auto;
    height: 130rpx;
}
.datas-hd{
    display: flex;
    flex-direction: column;
    align-items: center; 
    width: 33%;
    position: relative;
}
.datas-hd1:after,.datas-hd2:after{
    content: "";
    height: 60rpx;
    background: #ebebeb;
    width: 2rpx;
    position: absolute;
    top: 15rpx;
    right:0;
}
.data-t{
    color: #333333;
    font-size: 36rpx;
    font-weight: bold;
}
.data-num{
    color: #999999;
    font-size: 24rpx;
    margin-top: 10rpx;
}
